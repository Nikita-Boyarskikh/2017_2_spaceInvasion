.ui.one.column.centered.grid.ui__one__column__centered__grid__leaderboard
  h2.header_shadow.lbtitle(style='color: #FFF;') Leaderboard
.ui.one.column.centered.grid.ui__one__column__centered__grid__leaderboard
  .content.lb.left.aligned
    table.ui.selectable.celled.table.ui__selectable__celled__table__leaderboard
      thead
        tr.lbheader
          th Player
          th Rating
      tbody
        - var index = 0
            each player in data
                tr.lbbody
                    td #{++index}. #{player.username}
                    td #{player.score}
            else
                tr.lbbody
                    td There are no users yet
                    td
    .ui.large.green.pagination.buttons
      button.ui.labeled.icon.button
        i.left.chevron.icon
        | Back
      button.ui.right.labeled.icon.button
        | Next
        i.right.chevron.icon
