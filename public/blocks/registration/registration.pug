html
body
    .ui.one.column.centered.grid.registration
        .ui.card.registration
            .content.left.aligned
                .header Registration
                .description
                    form.ui.form.formWithValidation
                        .field(name = "emailField")
                            span(class = "message", hidden=true) This field can't be empty
                            label Email
                            input(type="text", name="email", placeholder="Email")
                        .field(name = "loginField")
                            span(class = "message", hidden=true) This field can't be empty
                            label Login
                            input(type="text", name="login", placeholder="Login")
                        .field(name = "passwordField")
                            span(class = "message", hidden=true) This field can't be empty
                            label Password
                            input(type="password", name="password", placeholder="Password")
                        .field(name = "repeatedPasswordField")
                            span(class = "message", hidden=true) This field can't be empty
                            label Repeat password
                            input(type="password", name="repeatedPassword", placeholder="Repeat password")
                        .field(name = "conditionsField")
                            span(class = "message", hidden=true) This field can't be empty
                            .ui.checkbox
                                input(type="checkbox", name="conditions", tabindex="0")
                                label I agree to the Terms and Conditions
                        button.ui.positive.button.validateBtn(type="submit", name="ValidateBtn") Register
