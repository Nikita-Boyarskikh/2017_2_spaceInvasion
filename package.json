{
  "name": "space-invasion-frontend",
  "version": "1.0.0",
  "description": "SpaceInvasion frontend",
  "main": "app.js",
  "author": "SpaceInvasionLab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nikita-Boyarskikh/SpaceInvasionFrontend.git"
  },
  "scripts": {
    "start": "node app.js",
    "jest": "jest",
    "lint": "eslint .",
    "dev": "webpack -w & 1>/dev/null 2>/dev/null",
    "webpack": "webpack",
    "test": "jest && eslint .",
    "fix-lint": "eslint . --fix"
  },
  "dependencies": {
    "@types/express": "^4.0.37",
    "awesome-typescript-loader": "^3.3.0",
    "css-loader": "^0.28.7",
    "express": "^4.16.1",
    "morgan": "^1.8.2",
    "pnotify": "^3.2.1",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "style-loader": "^0.19.0",
    "typescript": "^2.5.3",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.7.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "pug-jest": "^1.0.1",
    "ts-jest": "^21.1.3"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/public"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "verbose": true,
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.(pug)$": "pug-jest",
      "\\.(jsx?)$": "babel-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "public/**/*.{js,jsx,ts,tsx}",
      "!public/common/**",
      "!public/dist/**",
      "!public/pnotify.custom.min.js"
    ],
    "testRegex": "(<rootDir>/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
